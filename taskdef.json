{
  "family": "npi-dev-django-task",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "npi-backend",
      "image": "<IMAGE_URI>",
      "memory": 512,
      "cpu": 256,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "DJANGO_SETTINGS_MODULE",
          "value": "<DJANGO_SETTINGS_MODULE>"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_NAME",
          "valueFrom": "<SECRET_ID>:<DB_NAME>::"
        },
        {
          "name": "DATABASE_USER",
          "valueFrom": "<SECRET_ID>:<DB_USERNAME>::"
        },
        {
          "name": "DATABASE_PASSWORD",
          "valueFrom": "<SECRET_ID>:<DB_PASSWORD>::"
        },
        {
          "name": "DATABASE_HOST",
          "valueFrom": "<SECRET_ID>:<DB_HOST>::"
        },
        {
          "name": "DATABASE_PORT",
          "valueFrom": "<SECRET_ID>:<DB_PORT>::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/npi-dev-django",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "<EXECUTION_ROLE_ARN>"
}
